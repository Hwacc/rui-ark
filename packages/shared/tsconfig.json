{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "node_modules/.cache/.tsbuildinfo",
    "target": "ES2020",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "declaration": true,
    "declarationMap": false,
    "noEmit": false,
    "outDir": "./dist",
    "sourceMap": false,
    "isolatedModules": true,
    "preserveSymlinks": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
