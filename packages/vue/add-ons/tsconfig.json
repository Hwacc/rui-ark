{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",

    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "jsxImportSource": "vue",

    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleDetection": "force",
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@rui-ark/themes/*": ["../../themes/src/*"],
      "@rui-ark/shared/*": ["../../shared/src/*"]
    },

    "allowImportingTsExtensions": true,

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "references": [{ "path": "../../themes" }, { "path": "../../shared" }],
  "include": [
    "components/**/*.ts",
    "components/**/*.tsx",
    "components/**/*.vue",
    "composables/**/*.ts",
    "composables/**/*.tsx",
    "composables/**/*.vue",
    "directives/**/*.ts",
    "directives/**/*.tsx",
    "directives/**/*.vue"
  ],
  "exclude": ["node_modules", "dist"]
}
