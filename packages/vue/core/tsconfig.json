{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "useDefineForClassFields": true,

    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "jsxImportSource": "vue",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@core/*": ["./*"],
      "@shared/*": ["../../shared/*"],
      "@themes/*": ["../../themes/*"]
    },

    "allowImportingTsExtensions": true,
    "noEmit": true,
    "isolatedModules": true,

    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "components/**/*.ts",
    "components/**/*.tsx",
    "components/**/*.vue",
    "composables/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
